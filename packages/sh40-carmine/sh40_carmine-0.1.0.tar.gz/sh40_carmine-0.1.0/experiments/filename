from carmine import Carmine

def command_example(name: str, age: int | None = None) -> int:
    age_text = "I don't know your age." if age is None else f"You are {age}."

    print(f"Hello, {name}. {age_text}")

def main(argv: list[str] | None = None) -> None:
    """Runs the application."""

    with Carmine(argv) as cli:
        cli += command_example

if __name__ == "__main__":
    import sys

    main(sys.argv)
